import numpy as np
import matplotlib.pyplot as plt

v = 246.0
y_c = 0.163
m_psi = y_c * v / np.sqrt(2)

print(f"m_ψ = y_c × v / √2 = {m_psi:.1f} GeV")

plt.bar(['Higgs VEV', 'GENIE Mass'], [v, m_psi], color=['red', 'gold'])
plt.ylabel('Mass (GeV)')
plt.title('Aladin v∞ — m_ψ = 20.1 GeV from QFT')
plt.grid(alpha=0.3)
plt.tight_layout()
plt.savefig('/content/genie_mass_qft.png', dpi=300)
plt.show()
